<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    >
    <ImageView
        android:id="@+id/bingli_coveriv_id"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="fitXY"
        android:src="@drawable/kk"/>
<android.support.v7.widget.CardView
    android:id="@+id/cv_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    card_view:cardBackgroundColor="#66666633"
    card_view:cardCornerRadius="4dp"
    card_view:contentPaddingBottom="5dp"
    card_view:contentPaddingLeft="6dp"
    card_view:contentPaddingRight="6dp"
    card_view:contentPaddingTop="5dp"
    >
    <TextView
        android:id="@+id/cv_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户编号"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#00666633"
        android:textSize="15dp"/>

</android.support.v7.widget.CardView>

    <Button
        android:text="确诊"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:text="查看智能结果"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/cv_id"
        android:layout_alignStart="@+id/cv_id"
        android:layout_marginBottom="48dp" />

    <TextView
        android:id="@+id/tv_bloodpress_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:textColor="#0000ff"
        android:text="血压"
        android:layout_above="@+id/button5"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <TextView
        android:text="血压:"
        android:textSize="27sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_alignBaseline="@+id/tv_bloodpress_id"
        android:layout_alignBottom="@+id/tv_bloodpress_id"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5" />

    <TextView
        android:id="@+id/tv_heartrate_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#0000ff"
        android:textSize="25sp"
        android:text="心率"
        android:layout_above="@+id/tv_bloodpress_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <TextView
        android:text="心率:"
        android:textSize="27sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignBaseline="@+id/tv_heartrate_id"
        android:layout_alignBottom="@+id/tv_heartrate_id"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <TextView
        android:text="角度:"
        android:textSize="27sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignBaseline="@+id/tv_angle_id"
        android:layout_alignBottom="@+id/tv_angle_id"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5" />

    <TextView
        android:id="@+id/tv_angle_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:textColor="#0000ff"
        android:text="角度"
        android:layout_above="@+id/tv_heartrate_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />
</RelativeLayout>